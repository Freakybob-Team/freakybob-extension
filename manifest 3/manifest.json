{
    "name": "Freakybob",
    "description": "freakybob for your browser",
    "version": "2.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "contextMenus", "scripting"],
    "action": {
        "default_popup": "freaky.html",
        "default_icon": "freakybob.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "web_accessible_resources": [
        {
            "resources": ["images/freakybob.png"],
            "matches": ["<all_urls>"]
        }
    ]
}